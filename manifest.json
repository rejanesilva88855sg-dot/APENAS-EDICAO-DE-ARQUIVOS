{
  "manifest_version": 3,
  "name": "Preenchedor de Cartões",
  "version": "1.0",
  "description": "Extensão para salvar e preencher cartões automaticamente em checkouts.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
